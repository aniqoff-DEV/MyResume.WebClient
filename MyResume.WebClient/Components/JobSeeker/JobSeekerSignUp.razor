        <FluentTextField style="width: 100%;" Id="email" @bind-Value=@jobSeeker.Email>Почта:</FluentTextField>
        <FluentTextField style="width: 100%;" Id="password" @bind-Value=@jobSeeker.Password>Пароль:</FluentTextField>
