@using MyResume.WebClient.Application.Responses.JobSeekerResponses

<FluentCard Class="card-padding cursor" onclick="@GoToAbout" Width="100%">
    <FluentStack Orientation="Orientation.Vertical">

        <FluentStack Orientation="Orientation.Horizontal" Width="100%">
            <FluentPersona Status="PresenceStatus.Available"
                           ImageSize="44px"
                           Image="@imageDataURL"
                           Initials="@initials">
            </FluentPersona>
            <FluentLabel MarginBlock="1px" Typo="Typography.H2" Alignment="HorizontalAlignment.Start" Color="Color.Success">@JobSeekerOnCard.FullName</FluentLabel>
            <FluentLabel MarginBlock="1px" Typo="Typography.H2" Alignment="HorizontalAlignment.Center" Color="Color.Accent">| @(JobSeekerOnCard.BranchName ?? " ")</FluentLabel>
            <FluentLabel MarginBlock="1px" Typo="Typography.H2" Alignment="HorizontalAlignment.End" Color="Color.Info">@(JobSeekerOnCard.CityName ?? " ")</FluentLabel>
            
        </FluentStack>
        <FluentDivider Style="width: 100%;" Orientation=Orientation.Horizontal Role="DividerRole.Separator"></FluentDivider>
        <FluentLabel MarginBlock="1px" Typo="Typography.H2">@(JobSeekerOnCard.DesiredSalary != null ? $" Желаемая зарплата: {JobSeekerOnCard.DesiredSalary.ToString().Insert(3, " ")} р." : "")</FluentLabel>
        <FluentLabel Typo="Typography.EmailHeader"> @(JobSeekerOnCard.Description)</FluentLabel>
    </FluentStack>
</FluentCard>

<style>
    .cursor {
        cursor: pointer;
    }
</style>

@code {
    [Parameter]
    public InfoOnCardJobSeekerResponse JobSeekerOnCard { get; set; }
    private string imageDataURL { get; set; }
    private string initials;

    protected override void OnInitialized()
    {
        initials = JobSeekerOnCard.FullName.First().ToString();

        if (JobSeekerOnCard.Avatar is not null)
        {
            var imagesrc = Convert.ToBase64String(JobSeekerOnCard.Avatar);
            imageDataURL = string.Format("data:image/jpeg+jpg+png;base64,{0}", imagesrc);
        }
    }

    private void GoToAbout()
    {
        Navigation.NavigateTo($"/resume?id={JobSeekerOnCard.Id}", false, false);
    }
}
