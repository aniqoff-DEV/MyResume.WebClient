@using MyResume.WebClient.Application.Responses.LocationResponses
@using MyResume.WebClient.Dialogs

<div class="navmenu" style="margin:5px;">
    <nav class="sitenav" aria-labelledby="main-menu" onclick="document.getElementById('navmenu-toggle').click();">
        <FluentNavMenu Id="main-menu" Width="250" Collapsible="true"  Title="Navigation menu" @bind-Expanded=menuExpanded>
            <FluentNavLink Icon="@(new Icons.Regular.Size24.Home())" IconColor="AuthColor" Href="/" Text="Home">Главная страница</FluentNavLink>

            <FluentNavLink Icon="@(new Icons.Regular.Size24.Person())" IconColor="AuthColor" Href="/profile">Профиль</FluentNavLink>

            <FluentNavLink Icon="@(new Icons.Regular.Size24.News())" IconColor="AuthColor" Href="/hub">Мои сообщения</FluentNavLink>

            <FluentNavLink Icon="@(new Icons.Regular.Size24.Info())" IconColor="AuthColor" Href="/about">О нас</FluentNavLink>
        </FluentNavMenu>
    </nav>
</div>

@code {
    [Parameter]
    public Color AuthColor { get; set; } 
    private bool menuExpanded = true;
}

