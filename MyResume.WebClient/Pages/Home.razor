@page "/"
@using MyResume.WebClient.Components
@using MyResume.WebClient.Enums

<PageTitle>My Resume: Главная</PageTitle>

<FluentStack Orientation="Orientation.Vertical" Width="80%" Style="padding-top:10px;">
    <HomeFilter OnClickSelectedFilter="@Selected" />
    <ListCard _SelectedFilter="_selectedFilter" />
</FluentStack>

@code{
    private SelectedFilter? _selectedFilter { get; set; } 

    protected override void OnInitialized()
    {
        _selectedFilter = SelectedFilter.OnVacancy;
    }

    private void Selected(SelectedFilter selectedFilter){
        _selectedFilter = selectedFilter;
    }
}
